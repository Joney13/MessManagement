<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context=".MyProfileActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_my_profile"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="My Profile"
            app:titleTextColor="@android:color/white"
            app:navigationIcon="?attr/homeAsUpIndicator" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Profile Header Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <!-- Profile Icon Placeholder -->
                    <View
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/circle_background"
                        android:layout_marginBottom="12dp" />

                    <!-- Member Name -->
                    <TextView
                        android:id="@+id/tvProfileName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Member Name"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#2C3E50"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mess Member"
                        android:textSize="14sp"
                        android:textColor="#7F8C8D"
                        android:layout_marginTop="4dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Account Summary Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Summary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginBottom="12dp" />

            <!-- Row 1: Total Deposit & Total Meals -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- Total Deposit Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <View
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="#27AE60"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Deposit"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tvProfileTotalDeposit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BDT 0.00"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#27AE60"
                            android:gravity="center"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Total Meals Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <View
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="#3498DB"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Meals"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tvProfileTotalMeal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#3498DB"
                            android:gravity="center"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Row 2: Guest Meals & Total Cost -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- Guest Meals Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <View
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="#9B59B6"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Guest Meals"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tvProfileGuestMeal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#9B59B6"
                            android:gravity="center"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Total Cost Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <View
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="#E74C3C"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Cost"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tvProfileTotalCost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BDT 0.00"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#E74C3C"
                            android:gravity="center"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Current Balance Card (Full Width) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFF3E0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="#F39C12"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Current Balance"
                            android:textSize="16sp"
                            android:textColor="#7F8C8D" />

                        <TextView
                            android:id="@+id/tvProfileBalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BDT 0.00"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#F39C12"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <!-- Balance Status Icon Placeholder -->
                    <View
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="#27AE60" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Quick Actions Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Actions"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginBottom="12dp" />

            <!-- Row 3: Quick Action Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- View Meal History Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardMealHistory"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <View
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="#FF9800"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Meal History"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#2C3E50"
                            android:gravity="center" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Meal Off Request Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardMealOff"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <View
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="#E91E63"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Meal Off"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#2C3E50"
                            android:gravity="center" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Row 4: More Quick Actions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Chat with Admin Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardChatAdmin"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <View
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="#2196F3"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chat Admin"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#2C3E50"
                            android:gravity="center" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Settings Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSettings"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <View
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="#607D8B"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Settings"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#2C3E50"
                            android:gravity="center" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Message to Admin Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <View
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="?attr/colorPrimary"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Send Message to Admin"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#2C3E50" />
                    </LinearLayout>

                    <!-- Message Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Write your request or message..."
                        app:boxStrokeColor="?attr/colorPrimary"
                        app:hintTextColor="?attr/colorPrimary"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etMessageToAdmin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minLines="4"
                            android:maxLines="6"
                            android:gravity="top"
                            android:inputType="textMultiLine|textCapSentences" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Send Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSendMessage"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Send Message"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:cornerRadius="8dp"
                        style="@style/Widget.MaterialComponents.Button" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
